[
  {
    "cmd": [
      "vpython",
      "-u",
      "RECIPE_MODULE[recipe_engine::url]/resources/pycurl.py",
      "--url",
      "https://v8-roll.appspot.com/status",
      "--status-json",
      "/path/to/tmp/json",
      "--outfile",
      "/path/to/tmp/"
    ],
    "name": "check roll status",
    "~followup_annotations": [
      "@@@STEP_TEXT@Rolling activated@@@",
      "@@@STEP_LOG_LINE@stdout@1@@@",
      "@@@STEP_LOG_END@stdout@@@"
    ]
  },
  {
    "cmd": [
      "vpython",
      "-u",
      "RECIPE_MODULE[recipe_engine::url]/resources/pycurl.py",
      "--url",
      "https://codereview.chromium.org/search?owner=v8-autoroll%40chromium.org&limit=30&closed=3&format=json",
      "--status-json",
      "/path/to/tmp/json",
      "--outfile",
      "/path/to/tmp/json"
    ],
    "name": "check active roll",
    "~followup_annotations": [
      "@@@STEP_TEXT@Active rolls found.@@@"
    ]
  },
  {
    "cmd": [
      "python",
      "-u",
      "/opt/infra-python/run.py",
      "infra.tools.send_ts_mon_values",
      "--ts-mon-target-type",
      "task",
      "--ts-mon-task-service-name",
      "auto-roll",
      "--ts-mon-task-job-name",
      "roll",
      "--counter",
      "{\"name\": \"/v8/autoroller/count\", \"project\": \"v8-roll\", \"result\": \"active_roll\", \"value\": 1}"
    ],
    "name": "upload stats"
  },
  {
    "name": "$result",
    "recipe_result": null,
    "status_code": 0
  }
]