[
  {
    "cmd": [
      "vpython",
      "-u",
      "RECIPE_MODULE[recipe_engine::url]/resources/pycurl.py",
      "--url",
      "https://v8-roll.appspot.com/status",
      "--status-json",
      "/path/to/tmp/json",
      "--outfile",
      "/path/to/tmp/"
    ],
    "name": "check roll status",
    "~followup_annotations": [
      "@@@STEP_TEXT@Rolling deactivated@@@",
      "@@@STEP_LOG_LINE@stdout@0@@@",
      "@@@STEP_LOG_END@stdout@@@"
    ]
  },
  {
    "cmd": [
      "cipd",
      "ensure",
      "-root",
      "[CACHE]/infra_python",
      "-ensure-file",
      "infra/infra_python/${platform} latest",
      "-json-output",
      "/path/to/tmp/json"
    ],
    "name": "ensure_installed",
    "~followup_annotations": [
      "@@@STEP_LOG_LINE@json.output@{@@@",
      "@@@STEP_LOG_LINE@json.output@  \"result\": {@@@",
      "@@@STEP_LOG_LINE@json.output@    \"\": [@@@",
      "@@@STEP_LOG_LINE@json.output@      {@@@",
      "@@@STEP_LOG_LINE@json.output@        \"instance_id\": \"resolved-instance_id-of-latest----------\", @@@",
      "@@@STEP_LOG_LINE@json.output@        \"package\": \"infra/infra_python/resolved-platform\"@@@",
      "@@@STEP_LOG_LINE@json.output@      }@@@",
      "@@@STEP_LOG_LINE@json.output@    ]@@@",
      "@@@STEP_LOG_LINE@json.output@  }@@@",
      "@@@STEP_LOG_LINE@json.output@}@@@",
      "@@@STEP_LOG_END@json.output@@@"
    ]
  },
  {
    "cmd": [
      "python",
      "-u",
      "[CACHE]/infra_python/run.py",
      "infra.tools.send_ts_mon_values",
      "--ts-mon-target-type",
      "task",
      "--ts-mon-task-service-name",
      "auto-roll",
      "--ts-mon-task-job-name",
      "roll",
      "--counter-file",
      "{\"name\": \"/v8/autoroller/count\", \"project\": \"v8-roll\", \"result\": \"deactivated\", \"value\": 1}"
    ],
    "infra_step": true,
    "name": "upload_stats",
    "~followup_annotations": [
      "@@@STEP_LOG_LINE@metric_data@{@@@",
      "@@@STEP_LOG_LINE@metric_data@  \"name\": \"/v8/autoroller/count\",@@@",
      "@@@STEP_LOG_LINE@metric_data@  \"project\": \"v8-roll\",@@@",
      "@@@STEP_LOG_LINE@metric_data@  \"result\": \"deactivated\",@@@",
      "@@@STEP_LOG_LINE@metric_data@  \"value\": 1@@@",
      "@@@STEP_LOG_LINE@metric_data@}@@@",
      "@@@STEP_LOG_END@metric_data@@@"
    ]
  },
  {
    "name": "$result"
  }
]