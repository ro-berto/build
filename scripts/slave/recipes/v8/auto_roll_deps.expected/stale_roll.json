[
  {
    "cmd": [
      "vpython",
      "-u",
      "RECIPE_MODULE[recipe_engine::url]/resources/pycurl.py",
      "--url",
      "https://v8-roll.appspot.com/status",
      "--status-json",
      "/path/to/tmp/json",
      "--outfile",
      "/path/to/tmp/"
    ],
    "name": "check roll status",
    "~followup_annotations": [
      "@@@STEP_TEXT@Rolling activated@@@",
      "@@@STEP_LOG_LINE@stdout@1@@@",
      "@@@STEP_LOG_END@stdout@@@"
    ]
  },
  {
    "cmd": [
      "python",
      "-u",
      "RECIPE_PACKAGE_REPO[depot_tools]/gerrit_client.py",
      "changes",
      "--host",
      "https://chromium-review.googlesource.com",
      "--json_file",
      "/path/to/tmp/json",
      "--limit",
      "1",
      "-p",
      "project=chromium/src",
      "-p",
      "owner=v8-autoroll@chromium.org",
      "-p",
      "status=open"
    ],
    "env": {
      "PATH": "<PATH>:RECIPE_PACKAGE_REPO[depot_tools]"
    },
    "infra_step": true,
    "name": "gerrit changes",
    "~followup_annotations": [
      "@@@STEP_LOG_LINE@json.output@[@@@",
      "@@@STEP_LOG_LINE@json.output@  {@@@",
      "@@@STEP_LOG_LINE@json.output@    \"_number\": \"123\"@@@",
      "@@@STEP_LOG_LINE@json.output@  }@@@",
      "@@@STEP_LOG_LINE@json.output@]@@@",
      "@@@STEP_LOG_END@json.output@@@"
    ]
  },
  {
    "cmd": [
      "python",
      "-u",
      "RECIPE_PACKAGE_REPO[depot_tools]/gerrit_client.py",
      "changes",
      "--host",
      "https://chromium-review.googlesource.com/a",
      "--json_file",
      "/path/to/tmp/json",
      "--limit",
      "1",
      "-p",
      "change=123",
      "-p",
      "label=Commit-Queue=2"
    ],
    "env": {
      "PATH": "<PATH>:RECIPE_PACKAGE_REPO[depot_tools]"
    },
    "infra_step": true,
    "name": "gerrit changes (2)",
    "~followup_annotations": [
      "@@@STEP_LOG_LINE@json.output@[]@@@",
      "@@@STEP_LOG_END@json.output@@@"
    ]
  },
  {
    "cmd": [
      "git",
      "cl",
      "set-commit",
      "--gerrit",
      "-i",
      "123"
    ],
    "infra_step": true,
    "name": "git cl",
    "~followup_annotations": [
      "@@@STEP_TEXT@Stale roll found. Resubmitted to CQ.@@@"
    ]
  },
  {
    "cmd": [
      "python",
      "-u",
      "/opt/infra-python/run.py",
      "infra.tools.send_ts_mon_values",
      "--ts-mon-target-type",
      "task",
      "--ts-mon-task-service-name",
      "auto-roll",
      "--ts-mon-task-job-name",
      "roll",
      "--counter",
      "{\"name\": \"/v8/autoroller/count\", \"project\": \"v8-roll\", \"result\": \"stale_roll\", \"value\": 1}"
    ],
    "name": "upload stats"
  },
  {
    "name": "$result",
    "recipe_result": null,
    "status_code": 0
  }
]